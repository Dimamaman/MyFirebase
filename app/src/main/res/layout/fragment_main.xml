<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainFragment">


    <Button
        android:id="@+id/btn_save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="156dp"
        android:text="Save User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_retrieve_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Retrieve User"
        app:layout_constraintEnd_toEndOf="@+id/btn_save_user"
        app:layout_constraintStart_toStartOf="@+id/btn_save_user"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_user" />

    <Button
        android:id="@+id/btn_update_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Update User"
        app:layout_constraintEnd_toEndOf="@id/btn_retrieve_user"
        app:layout_constraintStart_toStartOf="@+id/btn_retrieve_user"
        app:layout_constraintTop_toBottomOf="@+id/btn_retrieve_user" />

    <Button
        android:id="@+id/btn_delete_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Delete User"
        app:layout_constraintEnd_toEndOf="@+id/btn_update_user"
        app:layout_constraintStart_toStartOf="@+id/btn_update_user"
        app:layout_constraintTop_toBottomOf="@+id/btn_update_user" />


</androidx.constraintlayout.widget.ConstraintLayout>